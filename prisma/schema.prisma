generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["debian-openssl-3.0.x"]
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

model todo {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String
    completed Boolean  @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
